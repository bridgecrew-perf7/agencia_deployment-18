extends ./layout/index

block contenido 
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Experiencias de nuestros clientes
        include ./layout/testimoniales

        .row
            .col-md-12

                h2.d-block.w-100.text-center.mt-4.mb-4 Agrega un testimonial

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text.center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST") 
                        .form-group 
                            label(for="nombre") Nombre 
                            input(type="text", id="nombre", name="nombre", class="form-control", value=nombre) 
                        .form-group 
                            label(for="correo") Correo electronico 
                            input(type="email", id="correo", name="correo", class="form-control", value= correo) 
                        .form-group 
                            label(for="mensaje") Tu opinion 
                            textarea#mensaje(name="mensaje", rows=3, class="form-control")= mensaje

                        input.btn.btn-success.btn-block(type="submit")
